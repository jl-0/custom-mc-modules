{
  "version": "1.0",
  "metadata": {
    "name": "Custom Terraform Modules for Unity MC",
    "description": "Example repo of custom terraform modules for use in Unity MC",
    "last_updated": "2025-07-01T00:00:00Z"
  },
  "modules": {
    "unity-s3": {
      "description": "Unity S3 bucket with security best practices and lifecycle management",
      "source": "github.com/jl-0/custom-mc-modules//modules/s3",
      "documentation": "https://github.com/jl-0/custom-mc-modules/blob/main/modules/s3/README.md",
      "versions": {
        "1.0.0": {
          "ref": "v1.0.0",
          "terraform_version": ">= 1.0"
        },
        "latest": {
          "ref": "main",
          "terraform_version": ">= 1.0"
        }
      },
      "inputs": {
        "bucket_name": {
          "description": "Name of the S3 bucket",
          "type": "string",
          "required": true
        },
        "environment": {
          "description": "Environment name (e.g., dev, staging, prod)",
          "type": "string",
          "default": "dev",
          "required": false
        },
        "project": {
          "description": "Project name",
          "type": "string",
          "default": "unity",
          "required": false
        },
        "versioning_enabled": {
          "description": "Enable versioning on the bucket",
          "type": "bool",
          "default": true,
          "required": false
        },
        "encryption_enabled": {
          "description": "Enable server-side encryption",
          "type": "bool",
          "default": true,
          "required": false
        },
        "kms_key_id": {
          "description": "KMS key ID for encryption (if null, uses AES256)",
          "type": "string",
          "default": null,
          "required": false
        },
        "block_public_access": {
          "description": "Block all public access to the bucket",
          "type": "bool",
          "default": true,
          "required": false
        },
        "enable_standard_lifecycle": {
          "description": "Enable standard Unity lifecycle configuration",
          "type": "bool",
          "default": false,
          "required": false
        },
        "lifecycle_rules": {
          "description": "List of custom lifecycle rules for the bucket",
          "type": "list(object)",
          "default": [],
          "required": false
        },
        "tags": {
          "description": "Additional tags to apply to all resources",
          "type": "map(string)",
          "default": {},
          "required": false
        }
      },
      "outputs": {
        "bucket_id": {
          "description": "The name of the bucket"
        },
        "bucket_arn": {
          "description": "The ARN of the bucket"
        },
        "bucket_domain_name": {
          "description": "The bucket domain name"
        },
        "bucket_url_s3": {
          "description": "S3 protocol URL of the bucket"
        },
        "console_url": {
          "description": "AWS Console URL for the bucket"
        }
      }
    },
    "unity-vpc": {
      "description": "Unity VPC with public/private subnets across multiple AZs",
      "source": "github.com/jl-0/custom-mc-modules//modules/vpc",
      "documentation": "https://github.com/jl-0/custom-mc-modules/blob/main/modules/vpc/README.md",
      "versions": {
        "1.0.0": {
          "ref": "v1.0.0",
          "terraform_version": ">= 1.0"
        },
        "latest": {
          "ref": "main",
          "terraform_version": ">= 1.0"
        }
      },
      "inputs": {
        "vpc_cidr": {
          "description": "CIDR block for the VPC",
          "type": "string",
          "required": true
        },
        "name_prefix": {
          "description": "Name prefix for all resources",
          "type": "string",
          "required": true
        },
        "availability_zones": {
          "description": "List of availability zones",
          "type": "list(string)",
          "required": true
        },
        "enable_nat_gateway": {
          "description": "Enable NAT Gateway for private subnets",
          "type": "bool",
          "default": true,
          "required": false
        },
        "enable_dns_hostnames": {
          "description": "Enable DNS hostnames in the VPC",
          "type": "bool",
          "default": true,
          "required": false
        },
        "tags": {
          "description": "Additional tags to apply to all resources",
          "type": "map(string)",
          "default": {},
          "required": false
        }
      },
      "outputs": {
        "vpc_id": {
          "description": "The ID of the VPC"
        },
        "vpc_cidr_block": {
          "description": "The CIDR block of the VPC"
        },
        "public_subnet_ids": {
          "description": "List of public subnet IDs"
        },
        "private_subnet_ids": {
          "description": "List of private subnet IDs"
        },
        "nat_gateway_ids": {
          "description": "List of NAT Gateway IDs"
        },
        "internet_gateway_id": {
          "description": "The ID of the Internet Gateway"
        }
      }
    }
  }
}